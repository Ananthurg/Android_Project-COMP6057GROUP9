<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textRound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎯 Round 1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏳ Time Left"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/layoutCourts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/textBench"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Benched players will appear here"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📜 Round History"
            android:textSize="16sp"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/buttonEndSession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Session"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
